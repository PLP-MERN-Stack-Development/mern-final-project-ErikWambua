# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://MatPulse254:MatPulse254@cluster0.okzki5y.mongodb.net/?appName=Cluster0
MONGODB_TEST_URI=mongodb://localhost:27017/matatu-tracker-test

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
